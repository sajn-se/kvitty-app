# Better Auth secret key - Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=

# Better Auth URL - Your application URL
BETTER_AUTH_URL=http://localhost:3000

# Database connection string
DATABASE_URL=

# Storage Configuration
# Options: "local" (default), "s3", "vercel-blob"
STORAGE_MODE=local

# AWS S3 Configuration (required if STORAGE_MODE=s3)
AWS_REGION=eu-north-1
AWS_S3_BUCKET=kvitty-se
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDFRONT_DOMAIN=

# Vercel Blob Configuration (required if STORAGE_MODE=vercel-blob)
BLOB_READ_WRITE_TOKEN=

# UseSend API key for email sending
USESEND_API_KEY=

# UseSend URL for email sending
USESEND_URL=

# Public application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email sender address
EMAIL_FROM=

# Groq API key for AI features
GROQ_API_KEY=

# Encryption key for sensitive data - Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Google OAuth client ID
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=
